---
import Layout from '../layouts/Layout.astro';
import Header from '../components/react/Header';
import Hero from '../components/react/Hero';
import Servicios from '../components/react/Servicios';
import PorQueElegirnos from '../components/react/PorQueElegirnos';
import ComoTrabajamos from '../components/react/ComoTrabajamos';
import Opiniones from '../components/react/Opiniones';
import FAQ from '../components/react/FAQ';
import Contacto from '../components/react/Contacto';
import Footer from '../components/react/Footer';
import WhatsAppButton from '../components/react/WhatsAppButton';
---

<Layout title="Lubricentro Senzabello | Cambio de aceite en Florencio Varela">
  <!-- Header fijo -->
  <Header client:load />
  
  <main>
    <!-- Hero Section -->
    <Hero client:load />
    
    <!-- Servicios -->
    <Servicios client:visible />
    
    <!-- Por qué elegirnos -->
    <PorQueElegirnos client:visible />
    
    <!-- Cómo trabajamos -->
    <ComoTrabajamos client:visible />
    
    <!-- Opiniones -->
    <Opiniones client:visible />
    
    <!-- FAQ -->
    <FAQ client:visible />
    
    <!-- Contacto -->
    <Contacto client:visible />
  </main>
  
  <!-- Footer -->
  <Footer client:visible />
  
  <!-- Botón flotante de WhatsApp -->
  <WhatsAppButton client:load />
</Layout>
